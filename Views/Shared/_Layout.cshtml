@using DA_BAN_SACH.Helpers

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Book Store @ViewBag.Title</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="format-detection" content="telephone=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="author" content="">
    <meta name="keywords" content="">
    <meta name="description" content="">

    <link rel="icon" type="image/x-icon" href="~/Images/item5.png">
    <link rel="stylesheet" type="text/css" href="~/Content/normalize.css">
    <link rel="stylesheet" type="text/css" href="~/Content/vendor.css">
    <link rel="stylesheet" type="text/css" href="~/Content/style.css">
    <link href="~/icomoon/icomoon.css" rel="stylesheet" />
    @RenderSection("Style", required: false)



</head>

<body>

    <div id="header-wrap">

        <div class="top-content">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <div class="social-links">
                            <ul>
                                <li>
                                    <a href="#"><i class="icon icon-facebook"></i></a>
                                </li>
                                <li>
                                    <a href="#"><i class="icon icon-twitter"></i></a>
                                </li>
                                <li>
                                    <a href="#"><i class="icon icon-youtube-play"></i></a>
                                </li>
                                <li>
                                    <a href="#"><i class="icon icon-behance-square"></i></a>
                                </li>
                            </ul>
                        </div><!--social-links-->
                    </div>
                    <div class="col-md-6">
                        <div class="right-element">
                            @if (Session["MaKH"] != null)
                            {
                                if (Session["TaiKhoan"].Equals("admin"))
                                {
                                    <a href="/AdminPages/Dashboard/Login">Trang admin</a>
                                }
                                <a href="@Url.Action("Logout","Home")" class="user-account for-buy"><i class="icon icon-user"></i><span>Logout</span></a>
                                <span>
                                    Hi - @Session["Hoten"]
                                </span>
                            }
                            else
                            {
                                <a href="@Url.Action("Login","Home")" class="user-account for-buy"><i class="icon icon-user"></i><span>Login</span></a>
                            }
                          
                            <a href="@Url.Action("Index","Cart")" class="cart for-buy"><i class="icon icon-clipboard"></i><span>Cart:(0 $)</span></a>

                            <div class="action-menu">

                                <div class="search-bar">
                                    <a href="#" class="search-button search-toggle" data-selector="#header-wrap">
                                        <i class="icon icon-search"></i>
                                    </a>
                                    @using (Html.BeginForm("Index", "Shop", FormMethod.Get, new { @class = "search-box" }))
                                    {
                                        
                                            <input class="search-field text search-input" name="searchString" placeholder="Search" type="search">
                                  
                                    }
                                    </div>
                            </div>

                        </div><!--top-right-->
                    </div>

                </div>
            </div>
        </div><!--top-content-->

        <header id="header">
            <div class="container">
                <div class="row">

                    <div class="col-md-2">
                        <div class="main-logo">
                            <a href="@Url.Action("Index","Home")"><img src="~/Images/main-logo.png" style="width:100%;,max-width: 100% !important;" alt="logo"></a>
                        </div>

                    </div>

                    <div class="col-md-10">

                        <nav id="navbar">
                            <div class="main-menu stellarnav">
                                <ul class="menu-list">
                                    <li class="menu-item @Html.IsSelected(action: "Index" ,controller: "Home")"><a href="@Url.Action("Index","Home")" data-effect="Home">Home</a></li>
                                    <li class="menu-item @Html.IsSelected(action: "Index" ,controller: "About")"><a href="@Url.Action("Index","About")" class="nav-link" data-effect="About">About</a></li>
                                    <li class="menu-item @Html.IsSelected(action: "Index" ,controller: "Blog")"><a href="@Url.Action("Index","Blog")" class="nav-link" data-effect="About">Blog</a></li>
                                   
                                    <li class="menu-item @Html.IsSelected(action: "Index" ,controller: "Shop")"><a href="@Url.Action("Index","Shop")" class="nav-link" data-effect="Shop">Shop</a></li>
                                    <li class="menu-item @Html.IsSelected(action: "Index" ,controller: "Contact")"><a href="@Url.Action("Index","Contact")" class="nav-link" data-effect="Contact">Contact</a></li>
                                </ul>

                                <div class="hamburger">
                                    <span class="bar"></span>
                                    <span class="bar"></span>
                                    <span class="bar"></span>
                                </div>

                            </div>
                        </nav>

                    </div>

                </div>
            </div>
        </header>

    </div><!--header-wrap-->

    @RenderBody()




    <footer id="footer">
        <div class="container">
            <div class="row">

                <div class="col-md-4">

                    <div class="footer-item">
                        <div class="company-brand">
                            <img src="~/Images/main-logo.png" alt="logo" class="footer-logo">
                            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sagittis sed ptibus liberolectus nonet psryroin. Amet sed lorem posuere sit iaculis amet, ac urna. Adipiscing fames semper erat ac in suspendisse iaculis.</p>
                        </div>
                    </div>

                </div>

                <div class="col-md-2">

                    <div class="footer-menu">
                        <h5>About Us</h5>
                        <ul class="menu-list">
                            <li class="menu-item">
                                <a href="#">vision</a>
                            </li>
                            <li class="menu-item">
                                <a href="#">articles </a>
                            </li>
                            <li class="menu-item">
                                <a href="#">careers</a>
                            </li>
                            <li class="menu-item">
                                <a href="#">service terms</a>
                            </li>
                            <li class="menu-item">
                                <a href="#">donate</a>
                            </li>
                        </ul>
                    </div>

                </div>
                <div class="col-md-2">

                    <div class="footer-menu">
                        <h5>Discover</h5>
                        <ul class="menu-list">
                            <li class="menu-item">
                                <a href="#">Home</a>
                            </li>
                            <li class="menu-item">
                                <a href="#">Books</a>
                            </li>
                            <li class="menu-item">
                                <a href="#">Authors</a>
                            </li>
                            <li class="menu-item">
                                <a href="#">Subjects</a>
                            </li>
                            <li class="menu-item">
                                <a href="#">Advanced Search</a>
                            </li>
                        </ul>
                    </div>

                </div>
                <div class="col-md-2">

                    <div class="footer-menu">
                        <h5>My account</h5>
                        <ul class="menu-list">
                            <li class="menu-item">
                                <a href="#">Sign In</a>
                            </li>
                            <li class="menu-item">
                                <a href="#">View Cart</a>
                            </li>
                            <li class="menu-item">
                                <a href="#">My Wishtlist</a>
                            </li>
                            <li class="menu-item">
                                <a href="#">Track My Order</a>
                            </li>
                        </ul>
                    </div>

                </div>
                <div class="col-md-2">

                    <div class="footer-menu">
                        <h5>Help</h5>
                        <ul class="menu-list">
                            <li class="menu-item">
                                <a href="#">Help center</a>
                            </li>
                            <li class="menu-item">
                                <a href="#">Report a problem</a>
                            </li>
                            <li class="menu-item">
                                <a href="#">Suggesting edits</a>
                            </li>
                            <li class="menu-item">
                                <a href="#">Contact us</a>
                            </li>
                        </ul>
                    </div>

                </div>

            </div>
            <!-- / row -->

        </div>
    </footer>

    <div id="footer-bottom">
        <div class="container">
            <div class="row">
                <div class="col-md-12">

                    <div class="copyright">
                        <div class="row">

                            <div class="col-md-6">
                                <p>© 2022 All rights reserved. Free HTML Template by <a href="https://www.templatesjungle.com/" target="_blank">TemplatesJungle</a></p>
                            </div>

                            <div class="col-md-6">
                                <div class="social-links align-right">
                                    <ul>
                                        <li>
                                            <a href="#"><i class="icon icon-facebook"></i></a>
                                        </li>
                                        <li>
                                            <a href="#"><i class="icon icon-twitter"></i></a>
                                        </li>
                                        <li>
                                            <a href="#"><i class="icon icon-youtube-play"></i></a>
                                        </li>
                                        <li>
                                            <a href="#"><i class="icon icon-behance-square"></i></a>
                                        </li>
                                    </ul>
                                </div>
                            </div>

                        </div>
                    </div><!--grid-->

                </div><!--footer-bottom-content-->
            </div>
        </div>
    </div>

    <!-- script
    ================================================== -->
    <script src="~/script/modernizr.js"></script>
    <script src="~/script/jquery-1.11.0.min.js"></script>
    <script src="~/script/plugins.js"></script>
    <script src="~/script/script.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>	