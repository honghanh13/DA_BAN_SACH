<section id="featured-books">
    <div class="container">
        <div class="row">
            <div class="col-md-12">

                <div class="section-header align-center">
                    <div class="title">
                        <span>Some quality items</span>
                    </div>
                    <h2 class="section-title">Featured Books</h2>
                </div>

                <div class="product-list" data-aos="fade-up">
                    <div class="row">
                        @foreach (var book1 in ViewBag.rambooks)
                        {
                            <div class="col-md-3">
                                <figure class="product-style" style="text-align:center;">
                                    <img src="~/Images/@book1.AnhBia" style="width: 242px; height: 309px; padding: 0;" alt="Books" class="product-item">

                                    <button type="button" class="add-to-cart" onclick="location.href='@Url.Action("AddToCart","Cart", new { productId = @book1.MaSach })'" data-product-tile="add-to-cart">Add to Cart</button>

                                    <figcaption>
                                        <h3>@(book1.TenSach.Length > 20 ? book1.TenSach.Substring(0, 20) + "..." : book1.TenSach)</h3>
                                        <p>Klien Marry</p>
                                        <div class="item-price">@book1.GiaBan.ToString("#,##0 ₫")</div>
                                    </figcaption>
                                </figure>
                            </div>
                        }
                    </div><!--ft-books-slider-->

                </div><!--grid-->


            </div><!--inner-content-->
        </div>

        <div class="row">
            <div class="col-md-12">

                <div class="btn-wrap align-right">
                    <a href="#" class="btn-accent-arrow">View all products <i class="icon icon-ns-arrow-right"></i></a>
                </div>

            </div>
        </div>
    </div>
</section>

<section id="best-selling" class="leaf-pattern-overlay">
    <div class="corner-pattern-overlay"></div>
    <div class="container">
        <div class="row">

            <div class="col-md-8 col-md-offset-2">

                <div class="row">
                    @foreach (var selling in Model.Saches.Take(1))
                    {
                        <div class="col-md-6">
                            <figure class="products-thumb">
                                <img src="~/Images/@selling.AnhBia"  alt="book" class="single-image">
                            </figure>
                        </div>

                        <div class="col-md-6">
                            <div class="product-entry">
                                <h2 class="section-title divider">Best Selling Book</h2>

                                <div class="products-content">
                                    <div class="author-name">By @selling.TacGia.TenTG</div>
                                    <h3 class="item-title">@selling.TenSach</h3>
                                    <p>@selling.MoTa</p>
                                    <div class="item-price">@selling.GiaBan.Value.ToString("#,##0 ₫")</div>
                                    <div class="btn-wrap">
                                        <a href="@Url.Action("ShopDetails","Shop", new { id = selling.MaSach})" class="btn-accent-arrow">shop it now <i class="icon icon-ns-arrow-right"></i></a>
                                    </div>
                                </div>
                                


                            </div>
                        </div>
                    }
                    </div>
                <!-- / row -->

            </div>

        </div>
    </div>
</section>

